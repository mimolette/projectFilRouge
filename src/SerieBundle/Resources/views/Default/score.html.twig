<div class="top_serie_lat_evaluation">
  {% for i in 4..0 %}
    {% if serie.moyenne >= i %}
      {% if serie.moyenne >= i+1 %}
        <a href="{{ path('score', {'id':serie[0].id, 'note':i+1}) }}" class="js_score">
          <img class="wf_img" src="{{ asset('images/star_full.png') }}" alt="evaluation"/>
        </a>
      {% elseif serie.moyenne >= i+0.3 %}
        <a href="{{ path('score', {'id':serie[0].id, 'note':i+1}) }}" class="js_score">
          <img class="wf_img" src="{{ asset('images/star_half.png') }}" alt="evaluation"/>
        </a>
      {% else %}
        <a href="{{ path('score', {'id':serie[0].id, 'note':i+1}) }}" class="js_score">
          <img class="wf_img" src="{{ asset('images/star_empty.png') }}" alt="evaluation"/>
        </a>
      {% endif %}
    {% else %}
      <a href="{{ path('score', {'id':serie[0].id, 'note':i+1}) }}" class="js_score">
        <img class="wf_img" src="{{ asset('images/star_empty.png') }}" alt="evaluation"/>
      </a>
    {% endif %}
  {% endfor %}

  <span class="top_serie_lat_score">{{ serie.moyenne|number_format(1, ',', ' ') }}</span>
</div>