{% endblock %}


{% block body %}

  <div id="main">
    <!-- le block <section> qui contient tout les informations de la
         page courante -->
    <section id="top_10">

      <!-- le titre de la page -->
      <h1 class="wf_no-link-align">Top 10</h1>

      <!-- le panneau de filtre du résultat des différents top : top des meilleurs vue, top des meilleurs suivi, top des mieux noté, ... -->
      {#<ul>#}
        {#<li class="wf_link">filtre 1</li>#}
        {#<li class="wf_link">filtre 2</li>#}
        {#<li class="wf_link">filtre 3</li>#}
        {#<li class="wf_link">filtre 4</li>#}
      {#</ul>#}

      <!-- le block qui contient le classement dans sa totalité -->
      <div class="top_10_block">
      {% for serie in series %}
        <!-- chaque résultat est stocké dans une <div> -->
        <div class="top_10_result">
          <!-- l'ensemble image de la serie plus nom -->
          <figure>
            <img class="wf_img" src="{{ asset("images/series/%s"|format(serie[0].poster.path)) }}" alt="serie"/>
            <figcaption>
              <a class="wf_link" href="{{ path ("serie_detail",{"id": serie[0].id }) }}">{{ serie[0].name }}</a>
            </figcaption>
          </figure>
          <!-- la partie larérale du résultat -->
          <div class="top_10_lat">
            <!-- l'évaluation de la série -->
            {{ include('SerieBundle:Default/score.html.twig') }}
            <!-- le nombre de vue -->
            <div class="top_10_lat_nbVu wf_no-link">{{ serie[0].viewers|length }}</div>
          </div>
          <!-- l'image du classement de la série -->
          <img class="wf_img classement_serie" src="{{ asset('images/wf_img.jpg') }}" alt="classement_serie"/>
        </div>
        <!-- chaque résultat est stocké dans une <div> -->
      {% endfor %}
      </div>

    </section>
  </div>

