            {#<img class="wf_img" src="{{ asset('images/wf_img.jpg') }}" alt="evaluation"/>#}
            {#<img class="wf_img" src="{{ asset('images/wf_img.jpg') }}" alt="evaluation"/>#}
            {#<img class="wf_img" src="{{ asset('images/wf_img.jpg') }}" alt="evaluation"/>#}
            {#<img class="wf_img" src="{{ asset('images/wf_img.jpg') }}" alt="evaluation"/>#}
          {#</div>#}
          {#<!-- le nombre de vue -->#}
          {#<div class="detail_genre_lat_nbVu wf_no-link">Nb vu</div>#}
        </div>
    {% endfor %}

    </div>

    </section>
</div>

{% endblock %}

